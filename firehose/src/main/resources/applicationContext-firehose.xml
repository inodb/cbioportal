<?xml version="1.0" encoding="UTF-8"?>
<b:beans xmlns:b="http://www.springframework.org/schema/beans"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xmlns:context="http://www.springframework.org/schema/context"
		 xsi:schemaLocation="http://www.springframework.org/schema/beans
							 http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
							 http://www.springframework.org/schema/context
							 http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 

  <context:annotation-config />
  <context:property-placeholder location="file:${FIREHOSE_HOME}/firehose.properties"/>

  <!--
	  some beans to help with firehose
  -->
  <b:bean id="spreadsheetService" class="com.google.gdata.client.spreadsheet.SpreadsheetService">
	<b:constructor-arg index="0"><b:value>${spreadsheet_service_appname}</b:value></b:constructor-arg>
  </b:bean>
  <b:bean id="config" class="org.mskcc.cbio.firehose.config.internal.GDataImpl">
	<b:constructor-arg ref="spreadsheetService"/>
  </b:bean>
  <b:bean id="fileUtils" class="org.mskcc.cbio.firehose.util.internal.FileUtilsImpl"/>
  <b:bean id="fetcher" class="org.mskcc.cbio.firehose.fetcher.internal.FetcherImpl">
	<b:constructor-arg ref="config"/>
	<b:constructor-arg ref="fileUtils"/>
  </b:bean>

</b:beans>